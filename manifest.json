{
  "manifest_version": 3,
  "name": "BGG Owl Trade Helper",
  "version": "1.0",
  "description": "Enhances the OLWLG for BGG math trades.",
  "icons": {
    "48": "icons/owl-48.png",
    "96": "icons/owl-96.png"
  },
  "permissions": [
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://bgg.activityclub.org/olwlg/*"
  ],
  "action": {
    "default_title": "BGG Owl Trade Helper",
    "default_icon": "icons/owl-32.png",
    "default_popup": "popup/index.html"
  }
}